<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="left">
            <block class="Magecom\Brand\Block\Adminhtml\Brand\Attribute\Edit\Tabs" name="attribute_edit_tabs">
                <container label="Main" name="main">
                    <block class="Magecom\Brand\Block\Adminhtml\Brand\Attribute\Edit\Tab\Main" as="base"/>
                    <block class="Magecom\Brand\Block\Adminhtml\Attribute\Edit\Options\Options" as="advanced"/>
                </container>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magecom\Brand\Block\Adminhtml\Brand\Attribute\Edit" name="attribute_edit_content"/>
        </referenceContainer>
        <referenceContainer name="js">
            <block class="Magento\Backend\Block\Template" name="attribute_edit_js" template="Magecom_Brand::brand/brand/attribute/js.phtml"/>
        </referenceContainer>
        <referenceBlock name="attribute_edit_js">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Magento_Swatches::catalog/product/attribute/js.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
